<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sakura.app.MainWindow"
            stylesheets="@../css/main.css">

    <children>
        <!-- Chat ScrollPane: anchored to all four sides; fitToWidth makes the VBox content resize and wrap -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    hvalue="1.0"
                    vvalue="1.0"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="43.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0" />
            </content>
        </ScrollPane>

        <!-- User input: anchored left, right and bottom so it resizes horizontally -->
        <TextField fx:id="userInput"
                   prefHeight="41.0"
                   prefWidth="324.0"
                   onAction="#handleUserInput"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0"/>

        <!-- Send button: anchored bottom-right -->
        <Button fx:id="sendButton"
                text="Send"
                mnemonicParsing="false"
                prefHeight="41.0"
                prefWidth="76.0"
                onAction="#handleUserInput"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0"/>
    </children>
</AnchorPane>
